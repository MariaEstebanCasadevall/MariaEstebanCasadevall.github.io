---
layout: default
---

{% if page.cv_pdf %}
  <a
    {% if page.cv_pdf contains '://' %}
      href="{{ page.cv_pdf }}"
    {% else %}
      href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
    {% endif %}
    target="_blank"
    rel="noopener noreferrer"
  >
    <i class="fa-solid fa-file-pdf"></i> View PDF
  </a>
{% endif %}
